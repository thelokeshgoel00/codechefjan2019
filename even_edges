#include<bits/stdc++.h>
using namespace std;
#define ll int long long
#define mp make_pair
//#define for(i,n) for(int i=0;i<n;i++)
#define F first
#define S second
#define fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
#define N 1000000007
#define pq priority queue
#define pb push_back
#define endl "\n"
#define fast_set s.max_load_factor(0.25);s.reserve(500);
int main()
{
	fast;
    int n,m,i,j,k,test,arr[100002][2];
    cin>>test;
    while(test--)
    {
    	cin>>n>>m;
    	int vert=n;
    	int edge=m;
    	i=0;
    	int hash[100002]={0};
    	while(i<m)
    	{
    		cin>>arr[i][0]>>arr[i][1];
    		hash[arr[i][0]]++;
    		hash[arr[i][1]]++;
    		i++;
		}
		if(m%2==0)
		{
			cout<<1<<endl;
			for(i=1;i<=n;i++)
			{
				cout<<"1 ";
			}
			cout<<endl;
		}
		else
		{
			for(i=1;i<=n;i++)
			{
				if(hash[i]%2==1)
				{
					break;
				}
			}
			if(i<=n)
			{
				cout<<"2"<<endl;
				for(j=1;j<=n;j++)
				{
					if(j!=i)
					{
						cout<<"1 ";
					}
					else
					{
						cout<<"2 ";
					}
				}
				cout<<endl;
			}
			else
			{
				for(i=0;i<m;i++)
				{
					if(hash[arr[i][0]]%2==0&&hash[arr[i][1]]%2==0&&hash[arr[i][0]]!=0&&hash[arr[i][1]]!=0)
					{
						break;
					}
				}
				int mini=min(arr[i][0],arr[i][1]);
				int maxi=max(arr[i][0],arr[i][1]);
				cout<<"3"<<endl;
				for(i=1;i<=n;i++)
				{
					if(i==mini)
					{
						cout<<"2 ";
					}
					else if(i==maxi)
					{
						cout<<"3 ";
					}
					else
					{
						cout<<"1 ";
					}
				}
				cout<<endl;
			}
		}
	}
	return 0;
}

